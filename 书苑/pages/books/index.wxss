/* pages/movie/index.wxss */

.container {
  background: #f2f2f2;
}

/*1.轮播图样式  */

.swiper_box {
  width: 100%;
  height: 170px;
}

.swiper_box image {
  width: 100%;
  height: 170px;
  display: inline-block;
  /*溢出隐藏  */
  overflow: hidden;
}

/*2.文字部分样式  */

view.text {
  width: 100%;
  padding: 10px 12px 10px 10px;
  color: #656565;
}

.lineflag {
  width: 3px;
  height: 18px;
  background-color: #09bb07;
  /*行内块，拥有行级元素特性的块级元素
  行级元素：不会自动换行
  块级元素：单独占一行
  */
  display: inline-block;
}

view.text text {
  margin-left: 10px;
  line-height: 18px;
}

/*3.图书信息部分  */

.item {
  width: 100%;
  background-color: #fff;
  color: #787878;
  /*边框：粗细  实线  颜色  */
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  padding: 10px;
  display: flex;
  /*排列的方向
  row：默认，水平方向，起点在左边
  row-reverse：水平方向，起点在右边
  column：垂直方向，起点在上面
  column-reverse：垂直方向，起点在下面  */
  flex-direction: row;
}

.item image {
  width: 90px;
  height: 95px;
  /* display: block; */
  /* margin-left: 10px; */
}

.item-middle {
  flex: 1;
  margin-left: 10px;
  padding-top: 5px;
  /*溢出隐藏  */
  overflow: hidden;
  width: 250px;
  height: 95px;
}

/*书名  */

.item-middle .name {
  font-size: 16px;
  color: #222;
}

/*作者  */

.item-middle .author {
  font-size: 14px;
  color: #666;
  margin: 2px 0px;
}

/*详情  */

.item-middle .actor {
  display: inline-block;
  margin-top: 13px;
  border: 1px solid #29cc6d;
  /*边框圆角度  */
  border-radius: 3px;
  color: #29cc6d;
  padding: 2px 4px;
  font-size: 12px;
  line-height: 16px;
  text-align: center;
}

.item-right .price {
  font-size: 12px;
  color: #cf616a;
   margin-right: 25px; 
}

.item-right .buy {
  display: inline-block;
  margin-top: 40px;
  border: 1px solid #29cc6d;
  /*边框圆角度  */
  border-radius: 3px;
  color: #29cc6d;
  padding: 2px 4px;
  font-size: 12px;
  line-height: 16px;
  text-align: center;
}
